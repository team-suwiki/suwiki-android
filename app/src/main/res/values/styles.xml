    <style name="Logo" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/custom_blue</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
