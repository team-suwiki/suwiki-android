<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.class_info.ClassInfoActivity">

    <TextView
        android:id="@+id/text11"
        style="@style/TextMedium.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/class_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/text11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text11" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finishButton"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_suwiki_mini"
        android:text="@string/enroll"
        android:textColor="@color/suwiki_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text11" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timeTableEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_border_line_15_gray_500"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text11">

        <TextView
            android:id="@+id/tv_class_name"
            style="@style/TextRegular.14.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목명"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editClassName"
            style="@style/TextRegular.14"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:hint="과목 이름 입력"
            android:textColorHint="@color/suwiki_gray_700"
            app:layout_constraintBottom_toBottomOf="@id/tv_class_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_class_name"
            app:layout_constraintTop_toTopOf="@id/tv_class_name" />

        <TextView
            android:id="@+id/textProfessor"
            style="@style/TextRegular.14.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="교수명"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editClassName" />

        <EditText
            android:id="@+id/editProfessorName"
            style="@style/TextRegular.14"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:hint="교수명 입력"
            android:textColorHint="@color/suwiki_gray_700"
            app:layout_constraintBottom_toBottomOf="@+id/textProfessor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textProfessor"
            app:layout_constraintTop_toTopOf="@+id/textProfessor" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="시간 및 장소"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/addTime"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProfessorName" />

        <TextView
            android:id="@+id/addTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="추가"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/textTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/textTime"
            app:layout_constraintTop_toTopOf="@+id/textTime"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="글경701(월 1,2,3)"
            android:textColor="@color/custom_dark_gray"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/editTime1"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTime" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/custom_dark_gray"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/editTime2"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time1" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/custom_dark_gray"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/editTime3"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time2" />

        <TextView
            android:id="@+id/editTime1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="수정"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/time1"
            app:layout_constraintEnd_toStartOf="@+id/deleteTime1"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/time1"
            app:layout_constraintTop_toTopOf="@+id/time1"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/deleteTime1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="삭제"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/editTime1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/editTime1"
            app:layout_constraintTop_toTopOf="@+id/editTime1"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/editTime2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="수정"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/time2"
            app:layout_constraintEnd_toStartOf="@+id/deleteTime2"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/time2"
            app:layout_constraintTop_toTopOf="@+id/time2"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/deleteTime2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="삭제"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/editTime2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/editTime2"
            app:layout_constraintTop_toTopOf="@+id/editTime2"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/editTime3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="수정"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/time3"
            app:layout_constraintEnd_toStartOf="@+id/deleteTime3"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/time3"
            app:layout_constraintTop_toTopOf="@+id/time3"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/deleteTime3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="삭제"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/editTime3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/editTime3"
            app:layout_constraintTop_toTopOf="@+id/editTime3"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/tv_color"
            style="@style/TextRegular.14.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="색상"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time3" />

        <com.askjeffreyliu.flexboxradiogroup.FlexBoxRadioGroup
            android:id="@+id/rg_color"
            android:layout_marginTop="-5dp"
            app:layout_constraintStart_toStartOf="@id/editClassName"
            app:layout_constraintTop_toTopOf="@id/tv_color"
            app:alignItems="flex_start"
            app:flexWrap="wrap"
            android:layout_width="240dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_sky"
                android:background="@drawable/selector_radio_button_sky"
                android:button="@null"
                android:layout_marginEnd="8dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <RadioButton
                android:id="@+id/rb_navy"
                android:background="@drawable/selector_radio_button_navy"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_purple"
                android:background="@drawable/selector_radio_button_purple"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_dark_purple"
                android:background="@drawable/selector_radio_button_dark_purple"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_mint"
                android:background="@drawable/selector_radio_button_mint"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_dark_green"
                android:background="@drawable/selector_radio_button_dark_green"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_apricot"
                android:background="@drawable/selector_radio_button_apricot"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_orange"
                android:background="@drawable/selector_radio_button_orange"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_pink"
                android:background="@drawable/selector_radio_button_pink"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_brown"
                android:background="@drawable/selector_radio_button_brown"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_green"
                android:background="@drawable/selector_radio_button_green"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <RadioButton
                android:id="@+id/rb_gray"
                android:background="@drawable/selector_radio_button_dark_gray"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        </com.askjeffreyliu.flexboxradiogroup.FlexBoxRadioGroup>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgColor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_color"
            app:layout_constraintDimensionRatio="1.1"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toEndOf="@+id/tv_color"
            app:layout_constraintTop_toTopOf="@+id/tv_color"
            app:layout_optimizationLevel="ratio"
            app:srcCompat="@drawable/clrcle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>