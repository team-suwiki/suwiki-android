<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="evaluationData"
            type="com.kunize.uswtimetable.dataclass.EvaluationData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple_effect_recyclerview"
        android:padding="@dimen/recyclerview_padding">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="lectureName, lectureProfessor"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/averGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="textViewAver, averRatingBar, seeDetail, averScore, textViewNum6"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/editDeleteGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="editBtn, deleteBtn"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />


        <TextView
            android:id="@+id/lectureName"
            style="@style/lecture_name_middle_style"
            android:layout_marginTop="4dp"
            android:text="@{evaluationData.name}"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yearSemester"
            tools:text="강의 이름" />

        <TextView
            android:id="@+id/lectureProfessor"
            style="@style/professor_middle_style"
            android:layout_marginStart="8dp"
            android:text="@{evaluationData.professor}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/lectureName"
            app:layout_constraintStart_toEndOf="@+id/lectureName"
            tools:text="교수 이름" />

        <TextView
            android:id="@+id/textViewAver"
            style="@style/default_black_bold_textview_style"
            android:layout_marginTop="8dp"
            android:text="@string/average_index"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureName" />

        <RatingBar
            android:id="@+id/averRatingBar"
            style="@style/CustomRatingBar"
            android:layout_marginStart="8dp"
            android:rating="@{evaluationData.aver}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAver"
            app:layout_constraintStart_toEndOf="@+id/textViewAver"
            app:layout_constraintTop_toTopOf="@+id/textViewAver" />

        <TextView
            android:id="@+id/seeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/see_detail"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/averScore"
            app:layout_constraintStart_toEndOf="@+id/textViewNum6" />

        <TextView
            android:id="@+id/averScore"
            style="@style/score_textview_style"
            android:layout_marginStart="8dp"
            android:text="@{@string/floatToStr(evaluationData.aver)}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/averRatingBar"
            app:layout_constraintStart_toEndOf="@+id/averRatingBar"
            tools:text="5" />

        <TextView
            android:id="@+id/textViewNum6"
            style="@style/slash5_textview_style"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/averScore"
            app:layout_constraintStart_toEndOf="@+id/averScore" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailScoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailTestLayout"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textViewSatisfaction"
                style="@style/recyclerview_evaluation_text_info"
                android:text="@string/satisfaction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/satisfactionScore"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                android:text="@{@string/floatToStr(evaluationData.satisfaction)}"
                app:layout_constraintBottom_toBottomOf="@+id/textViewSatisfaction"
                app:layout_constraintStart_toEndOf="@+id/textViewSatisfaction"
                tools:text="5" />

            <TextView
                android:id="@+id/textViewNum1"
                style="@style/slash5_textview_style"
                app:layout_constraintBottom_toBottomOf="@+id/satisfactionScore"
                app:layout_constraintStart_toEndOf="@+id/satisfactionScore" />

            <TextView
                android:id="@+id/textViewHoney"
                style="@style/recyclerview_evaluation_text_info"
                android:layout_marginStart="24dp"
                android:text="@string/honey_score"
                app:layout_constraintStart_toEndOf="@+id/textViewNum1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/honeyScore"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                android:text="@{@string/floatToStr(evaluationData.honey)}"
                app:layout_constraintBottom_toBottomOf="@+id/textViewHoney"
                app:layout_constraintStart_toEndOf="@+id/textViewHoney"
                tools:text="5" />

            <TextView
                android:id="@+id/textViewNum2"
                style="@style/slash5_textview_style"
                app:layout_constraintBottom_toBottomOf="@+id/honeyScore"
                app:layout_constraintStart_toEndOf="@+id/honeyScore" />

            <TextView
                android:id="@+id/textViewLearning"
                style="@style/recyclerview_evaluation_text_info"
                android:layout_marginStart="24dp"
                android:text="@string/learning_score"
                app:layout_constraintEnd_toStartOf="@+id/learningScore"
                app:layout_constraintStart_toEndOf="@+id/textViewNum2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/learningScore"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                android:text="@{@string/floatToStr(evaluationData.learning)}"
                app:layout_constraintBottom_toBottomOf="@+id/textViewLearning"
                app:layout_constraintStart_toEndOf="@+id/textViewLearning"
                tools:text="5" />

            <TextView
                android:id="@+id/textViewNum5"
                style="@style/slash5_textview_style"
                app:layout_constraintBottom_toBottomOf="@+id/learningScore"
                app:layout_constraintStart_toEndOf="@+id/learningScore" />

            <TextView
                android:id="@+id/textViewMeeting"
                style="@style/recyclerview_evaluation_text_info"
                android:layout_marginTop="4dp"
                android:text="@string/team_meeting"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/textViewSatisfaction"
                app:layout_constraintTop_toBottomOf="@+id/textViewSatisfaction" />

            <TextView
                android:id="@+id/teamMeeting"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                lectureTeamAvg="@{evaluationData.teamMeeting}"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textViewMeeting"
                app:layout_constraintStart_toEndOf="@+id/textViewMeeting"
                tools:text="없음" />

            <TextView
                android:id="@+id/textViewTask"
                style="@style/recyclerview_evaluation_text_info"
                android:layout_marginTop="4dp"
                android:text="@string/task"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/textViewHoney"
                app:layout_constraintTop_toBottomOf="@+id/textViewHoney" />

            <TextView
                android:id="@+id/task"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                lectureHomeworkAvg="@{evaluationData.task}"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTask"
                app:layout_constraintStart_toEndOf="@+id/textViewTask"
                tools:text="많음" />

            <TextView
                android:id="@+id/textViewGrade"
                style="@style/recyclerview_evaluation_text_info"
                android:layout_marginTop="4dp"
                android:text="@string/grade"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/textViewLearning"
                app:layout_constraintTop_toBottomOf="@+id/textViewLearning" />

            <TextView
                android:id="@+id/grade"
                style="@style/score_textview_style"
                android:layout_marginStart="8dp"
                lectureDifficultyAvg="@{evaluationData.grade}"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textViewGrade"
                app:layout_constraintStart_toEndOf="@+id/textViewGrade"
                tools:text="까다로움" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/etcInfoGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="textViewTask, textViewMeeting, textViewGrade, task, teamMeeting, grade"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/lectureType"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:text="@{evaluationData.type}"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="이수" />

        <TextView
            android:id="@+id/reportBtn"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:text="@string/report"
            android:textColor="@color/custom_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deleteBtn"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:text="@string/delete"
            android:textColor="@color/custom_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editBtn"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:layout_marginEnd="16dp"
            android:text="@string/edit"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/deleteBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{evaluationData.content}"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailScoreLayout" />

        <TextView
            android:id="@+id/yearSemester"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:text="@{evaluationData.yearSemester}"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailTestLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/averScore">

            <TextView
                android:id="@+id/tv_exam_type_title"
                style="@style/default_black_bold_textview_style"
                android:layout_marginTop="8dp"
                android:text="시험 방식"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_exam_type"
                style="@style/TextBody1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{evaluationData.testMethod}"
                android:textColor="@color/custom_blue"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_exam_type_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_exam_type_title"
                app:layout_constraintTop_toTopOf="@+id/tv_exam_type_title"
                tools:text="족보, 교재, PPT" />

            <TextView
                android:id="@+id/tv_exam_difficulty_title"
                style="@style/default_black_bold_textview_style"
                android:layout_marginTop="8dp"
                android:text="난이도"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_type_title" />

            <TextView
                android:id="@+id/tv_exam_difficulty"
                style="@style/TextBody1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{evaluationData.difficulty}"
                android:textStyle="bold"
                app:difficultColor="@{evaluationData.difficulty}"
                app:layout_constraintBottom_toBottomOf="@id/tv_exam_difficulty_title"
                app:layout_constraintStart_toStartOf="@id/tv_exam_type"
                app:layout_constraintTop_toTopOf="@id/tv_exam_difficulty_title"
                tools:text="보통" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>