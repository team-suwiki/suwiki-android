<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.kunize.uswtimetable.dataclass.MyExamInfoDto" />

        <variable
            name="viewType"
            type="com.kunize.uswtimetable.util.ItemType" />

        <variable
            name="viewmodel"
            type="com.kunize.uswtimetable.ui.mypage.MyExamInfoViewModel" />

        <variable
            name="contentTextView"
            type="android.widget.TextView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        expandable="@{contentTextView}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple_effect_recyclerview"
        android:onClick="@{() -> viewmodel.onItemClicked(viewType.ROOT_VIEW, data)}"
        android:padding="@dimen/recyclerview_padding">

        <TextView
            android:id="@+id/lectureName"
            style="@style/lecture_name_middle_style"
            android:layout_marginTop="4dp"
            android:text="@string/title_item_my_exam_info_lecture_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yearSemester" />

        <TextView
            android:id="@+id/lectureProfessor"
            style="@style/professor_middle_style"
            android:layout_marginStart="8dp"
            android:text="@{data.professor}"
            app:layout_constraintBottom_toBottomOf="@+id/lectureName"
            app:layout_constraintStart_toEndOf="@+id/lectureName"
            tools:text="교수 이름" />

        <TextView
            android:id="@+id/tv_exam_type_title"
            style="@style/default_black_bold_textview_style"
            android:layout_marginTop="8dp"
            android:text="@string/title_item_my_exam_info_exam_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureName" />

        <TextView
            android:id="@+id/tv_exam_type"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{data.examInfo}"
            android:textColor="@color/custom_blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_exam_type_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_exam_type_title"
            app:layout_constraintTop_toTopOf="@+id/tv_exam_type_title"
            tools:text="족보, 교재, PPT" />

        <TextView
            android:id="@+id/tv_exam_difficulty_title"
            style="@style/default_black_bold_textview_style"
            android:layout_marginTop="8dp"
            android:text="@string/text_item_my_exam_info_difficulty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_exam_type_title" />

        <TextView
            android:id="@+id/tv_exam_difficulty"
            style="@style/TextBody1"
            difficultColor="@{data.examDifficulty}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.examDifficulty}"
            android:textColor="@color/custom_blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_exam_difficulty_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_exam_type"
            app:layout_constraintTop_toTopOf="@id/tv_exam_difficulty_title"
            tools:text="보통" />

        <TextView
            android:id="@+id/deleteBtn"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:onClick="@{() -> viewmodel.onItemClicked(viewType.DELETE_BUTTON, data)}"
            android:text="@string/delete"
            android:textColor="@color/custom_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editBtn"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:layout_marginEnd="16dp"
            android:onClick="@{() -> viewmodel.onItemClicked(viewType.EDIT_BUTTON, data)}"
            android:text="@string/edit"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toStartOf="@id/deleteBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{data.content}"
            android:textColor="@color/custom_dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_exam_difficulty_title"
            tools:text="와 이 강의 개꿀. 그냥 출석하고 교수 눈에만 안 띄면 A+ 가능 ㅋㅋ 무조건 들어라 애들아" />

        <TextView
            android:id="@+id/yearSemester"
            style="@style/recyclerview_evaluation_rounding_text_style"
            android:text="@{data.semester}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>